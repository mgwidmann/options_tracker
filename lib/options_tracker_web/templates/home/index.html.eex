              <span class="dot" style="background:#ED594A;"></span>
              <span class="dot" style="background:#FDD800;"></span>
              <span class="dot" style="background:#5AC05A;"></span>
            </div>
            <div class="column middle">
              <input type="text" value="https://options-tracker.gigalixirapp.com/positions" disabled='disabled'>
            </div>
            <div class="column right">
              <div style="float:right">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
              </div>
            </div>
          </div>
          <div class="content">
            <img class="is-hidden-mobile" src="/images/easy-exercise-position-desktop.png" />
            <img class="is-hidden-desktop" src="/images/easy-exercise-position-mobile.png" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="hero is-large">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered has-text-centered mb-5">
        <h1 class="title">Track profit, cost basis, rolling losses & more</h1>
      </div>
      <div class="columns browser-window">
        <div class="container">
          <div class="row">
            <div class="column left">
              <span class="dot" style="background:#ED594A;"></span>
              <span class="dot" style="background:#FDD800;"></span>
              <span class="dot" style="background:#5AC05A;"></span>
            </div>
            <div class="column middle">
              <input type="text" value="https://options-tracker.gigalixirapp.com/positions" disabled='disabled'>
            </div>
            <div class="column right">
              <div style="float:right">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
              </div>
            </div>
          </div>
          <div class="content">
            <img class="is-hidden-mobile" src="/images/track-basis-profit-desktop.png" />
            <img class="is-hidden-desktop" src="/images/track-basis-profit-mobile.png" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="hero is-large">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column">
          <%= form_for :demologin, Routes.user_session_path(@conn, :demo_create), fn _ -> %>
            <%= raw Recaptcha.Template.display(size: "invisible") %>
            <%= submit("Try Demo Account", class: "button is-large is-primary is-fullwidth has-tooltip-arrow", data_tooltip: "WARNING: This is a publicly accessible account! Do not enter personally identifying information!") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
